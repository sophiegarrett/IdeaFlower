<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{> page/title}}</title>
  <link rel="stylesheet" href="/css/style.css"/>
  <link rel="stylesheet" href="/css/nav.css"/>

  <!-- Firebase initialization scripts -->
  <script src="/__/firebase/6.1.1/firebase-app.js"></script>
  <script src="/__/firebase/6.1.1/firebase-auth.js"></script>
  <script src="/__/firebase/init.js"></script>
</head>

<body>
  {{> page/nav}}
  <!-- Login/logout button controls -->
  <script>
    firebase.auth().onAuthStateChanged(function(user) {
      if (user) {
        document.getElementById("nav_login").href = "/logout";
        document.getElementById("nav_login").innerHTML = "Log Out";
      } else {
        document.getElementById("nav_login").href = "/login";
        document.getElementById("nav_login").innerHTML = "Log In";
      }
    });
  </script>

  {{{body}}}

</body>
</html>
